{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": false,
      "jsx": "react",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "strictFunctionTypes": false,
      "noImplicitAny": false,
      "declarationDir": "dist/types",
      "paths": {
        "@steedos-widgets/sortable": ["packages/sortable/src"],
      }
    },
    "include": [
      "packages",
      "stories",
    ],
    "exclude": ["node_modules"]
  }