{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": false,
      "jsx": "react",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "strictFunctionTypes": false,
      "noImplicitAny": false
    },
    "include": [
      "packages",
      "stories",
    ],
    "exclude": ["node_modules"],
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS",
        "resolveJsonModule": true,
        "noImplicitAny": false
      }
    },
    "paths": {
      "@steedos-widgets/dnd-kit": ["packages/dnd-kit/src"],
    }
  }