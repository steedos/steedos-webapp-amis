{
  "compilerOptions": {
    "baseUrl": "./src",
    "declarationDir": "dist/types",
    "outDir": "dist/cjs",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
